      "source": [
        "CORRELATION IN INCAREASING ORDER"
      ],
      "metadata": {
        "id": "wMn8zwUcoJNp"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "def Pearson_correlation(X,Y):\n",
        "    if len(X)==len(Y):\n",
        "        Sum_xy = sum((X-X.mean())*(Y-Y.mean()))\n",
        "        Sum_x_squared = sum((X-X.mean())**2)\n",
        "        Sum_y_squared = sum((Y-Y.mean())**2)\n",
        "        corr = Sum_xy / np.sqrt(Sum_x_squared * Sum_y_squared)\n",
        "    return corr\n",
        "\n",
        "print(Pearson_correlation(x,y))\n",
        "print(Pearson_correlation(x,x))"
      ],
